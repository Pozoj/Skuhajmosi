- @wine_colors, @wine_kinds, @wine_groups = WineColor.order(:name), WineKind.order(:name), WineGroup.order(:name)

- if @wine_colors.any?
  .wine-colors-list
    %h3 Barve vin
    = array_to_link_list(@wine_colors, "wine-colors")

- if @wine_kinds.any?
  .wine-kinds-list
    %h3 Vrste vin
    = array_to_link_list(@wine_kinds, "wine-kinds")

- if @wine_groups.any?
  .wine_groups-list
    %h3 Grupe vin
    = array_to_link_list(@wine_groups, "wine_groups")
