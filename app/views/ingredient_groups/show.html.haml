= title resource

#resource-menu
  - if can? :update, resource
    = link_to "Uredi skupino sestavin", edit_resource_path
  - if can? :destroy, resource
    = link_to "Odstrani skupino sestavin", resource, :method => :delete, :confirm => destroy_confirmation(resource)
  - if can? :create, Photo
    = link_to "Dodaj fotografijo", new_ingredient_group_photo_path(resource)

#basic-info
  = render "common/photo", :resource => resource

#related-info  
  - if resource.ingredients.any?
    .field
      .description Sestavine v skupini
      .value
        %ul= render resource.ingredients

= link_to_back