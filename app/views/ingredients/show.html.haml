= title resource

#resource-menu
  - if can? :update, resource
    = link_to "Uredi sestavino", edit_resource_path
  - if can? :destroy, resource
    = link_to "Odstrani sestavino", resource, :method => :delete, :confirm => destroy_confirmation(resource)
  - if can? :create, Photo
    = link_to "Dodaj fotografijo", new_ingredient_photo_path(resource)

#basic-info
  = render "common/photo", :resource => resource
  #description-bar
    .field
      .description Å t. kalorij na 100g
      .value= resource.calories


#related-info
  - if resource.recipes.any?
    .field
      .description Jedi, ki vsebujejo sestavino
      .value
        %ul= render resource.recipes.uniq

= link_to_back