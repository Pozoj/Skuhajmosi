!!!
%html
  %head
    %title= yield(:title).empty?? "Skuhajmo.si" : yield(:title)
    %link{:rel => "shortcut icon", :href => "/images/favicon.png", :type => "image/png"}  
    = stylesheet_link_tag 'compiled/screen', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag 'lib/jquery', 'lib/jquery.form', 'lib/rails', 'lib/rails-autocomplete', 'application', :cache => true
    / = csrf_meta_tag
    / :erb
    /   <script type="text/javascript">
    /     I18n.defaultLocale = "<%= I18n.default_locale %>";
    /     I18n.locale = "<%= I18n.locale %>";
    /   </script>
    = yield :javascripts
  %body{body_attrs}
    #head
      %h1
        = link_to_span "Skuhajmo.si", root_path
      %ul#menu
        %li= link_to "Recepti", recipes_path
        %li= link_to "Sestavine", ingredients_path
        %li= link_to "Skupine sestavin", ingredient_groups_path
        %li= link_to "Enote", units_path
      
      #current_user
        - if user_signed_in?
          Prijavljen
          = current_user
          = link_to "(Odjava)", destroy_user_session_path
        - else
          = link_to "Prijava", new_user_session_path
          
      
    #content
      - unless flash.empty?
        #flash
          - flash.each do |key, value|
            %p.flash{:id => key}= value
      = yield
      %br
    #foot
      &copy; Pozoj d.o.o.