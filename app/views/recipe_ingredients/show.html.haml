= title "Pregled sestavine recepta"

#resource-menu
  - if can? :manage, resource
    = link_to "Uredi sestavino", edit_resource_path
    = link_to "Odstrani sestavino", [parent, resource], :method => :delete, :confirm => destroy_confirmation(resource)

#basic-info
  - unless resource.ingredient.photos.empty?
    - for photo in resource.ingredient.photos
      .photo
        = link_to image_tag(photo.photo.url(:medium)), photo.photo.url(:original)
  
  #description-bar
    .field
      .description Sestavina
      .value= resource.ingredient

#related-info
  - if resource.ingredient.recipes.any? 
    .field
      .description Jedi, ki vsebujejo sestavino
      .value
        %ul= render resource.ingredient.recipes
  
= link_to_back parent_path