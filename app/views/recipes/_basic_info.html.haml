#basic-info
  - if @recipe_info.photos_added?
    .photos
      = link_to image_tag( @recipe_info.photos_url(:big) ), @recipe_info.photos_url(:original)

  #description-bar
    - if resource.time_to_prepare.present?  
      #time-to-prepare
        .description Čas priprave
        .value= @recipe_info.preparation_time

    - if resource.time_to_cook.present?  
      #time-to-cook
        .description Čas kuhanja
        .value= @recipe_info.cooking_time

    - if resource.num_people.present?
      #nr-of-people
        .description Št. oseb
        .value= link_to @recipe_info.num_people, recipes_path(:nr_of_people => @recipe_info.num_people)
