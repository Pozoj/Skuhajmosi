= title "Vina"

#resource-menu
  - if can? :create, Wine
    = link_to "Dodaj vino", new_resource_path
  - if can? :create, WineColor
    = link_to "Dodaj barvo", new_wine_color_path
  - if can? :create, WineKind
    = link_to "Dodaj vrsto", new_wine_kind_path
  - if can? :create, WineGroup
    = link_to "Dodaj grupo", new_wine_group_path
    

= collection_list_renderer(collection)

#related-info
  - if @wine_colors.any?
    .field
      .description Barve vin
      .value= array_to_link_list(@wine_colors, "wine-colors")
  
  - if @wine_kinds.any?
    .field
      .description Vrste vin
      .value= array_to_link_list(@wine_kinds, "wine-kinds")

  - if @wine_groups.any?
    .field
      .description Grupe vin
      .value= array_to_link_list(@wine_groups, "wine_groups")
